pipeline {
    agent { node { label 'Client' } }
    stages {
        stage('Deploy-Docker-app') {
            steps {
                sh 'sudo docker run -d -p 5001:5000 python-flask:latest'
                
            }
        }
        stage('Test') {
            steps {
                sh 'curl -Is http://127.0.0.1:5001 | head -n 1'
            }
        }
    }
}
slackSend message: 'Deployed successfully'
